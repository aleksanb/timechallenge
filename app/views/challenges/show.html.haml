%h1= @challenge.title
%p
  = @challenge.reward
%p
  = "#{l @challenge.deadline_time}. #{l @challenge.deadline_date}"
%p
  = @challenge.building.name
%ul
  - @challenge.users.each do |user|
    %li= user.name
    %li= image_tag(user.gravatar_url(size = 40), id: 'gravatar')

= link_to 'Attend', challenge_participations_path(@challenge), method: :post
= link_to 'Unattend', challenge_participation_path(@challenge, current_user), method: :delete
