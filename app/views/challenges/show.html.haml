%h2
  = @challenge.title

%dl
  %dt Reward
  %dd= @challenge.reward

  %dt Date
  %dd #{l(@challenge.deadline_date, format: :default)} @ #{l(@challenge.deadline_time, format: :default)}

  %dt Attending users
  %dd
    %ul
      - if @challenge.users.any?
        - @challenge.users.each do |user|
          %li= user.name
          %li= image_tag(user.gravatar_url(size = 40), id: 'gravatar')
          - if @challenge.unattendable?(@current_user) && @current_user == user
            %li= link_to 'Ditsj', |
              challenge_participation_path(@challenge, current_user), |
              method: :delete
      - else
        No attendees. Be the first!

- if @challenge.attendable? @current_user
  = link_to 'Attend', challenge_participations_path(@challenge), method: :post

- if permitted_to? :manage, :challenges
  = link_to "Destroy challenge", @challenge, method: :delete, data: { confirm: "Are you sure you wish to destroy this challenge? All attendees will be notified." }
